@model  Mooshak2_Hopur5.Models.ViewModels.AssignmentViewModel
@{
    ViewBag.Title = "ClosedAssignments";
}

<div class="col-md-12">
    <table class="table beigeTable m-60">
        <caption><span class="glyphicon glyphicon-th-list"></span>Closed assignments</caption>
        @foreach (var assignment in Model.ClosedAssignmentList)
        {
            string assignmentName = assignment.AssignmentName + "  -  " + assignment.DueDate;
            <tr>
                <td>@Html.ActionLink(assignmentName, "ViewAssignment", "Assignment", new { id = assignment.AssignmentId }, null)</td>
                <td>@Html.ActionLink(assignment.CourseName, "ViewCourse", "Course", new { id = assignment.CourseId }, null)</td>
                @if (assignment.DueDate.HasValue)
                {
                    <td>@assignment.DueDate.Value.ToString("d.MMM yyyy HH:mm")</td>
                }
                else
                {
                    <td>Not yet determined</td>
                }
            </tr>
        }
    </table>
</div>