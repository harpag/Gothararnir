@model  Mooshak2_Hopur5.Models.ViewModels.HomeViewModel
@{
    ViewBag.Title = "AdminIndex";
}

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

<h2>Admin</h2>

<div class="col-md-5">
    <h2>Announcements</h2>
    <ul class="list-group">

        @foreach (var announcement in Model.AnnouncementList.Take(3))
        {
            string announcementName = announcement.Announcement;
            int maxLength = 100;
            if (announcementName.Length > maxLength)
            {
                announcementName = announcementName.Substring(0, Math.Min(announcementName.Length - 1, maxLength)) + "...";
                string announcementFull = announcement.Announcement;
                <li>
                    <span class="teaser list-group-item">@Html.Label("asdf", announcementName, null)</span>

                    <span class="complete list-group-item">@Html.Label("asdf", announcementFull, null)</span>
                    
                    <span class="more list-group-item"> meira</span>
                </li>

            }
            else
            {
                <li class="list-group-item">@Html.Label("asdf", announcementName, null)</li>
            }
        }
</ul>
</div>


<div class="col-md-5">
    <h2>Shortcuts</h2>
    @Html.ActionLink("Create user", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-large" })
    @Html.ActionLink("Create course", "CreateCourse", "Course", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-large" })
</div>

}
else
{
    @Html.Action("Login", "Account", null)
    }

