@model  Mooshak2_Hopur5.Models.ViewModels.CourseViewModel
@{
    ViewBag.Title = "EditCourse";
}

<h2>Edit Course</h2>


@using (Html.BeginForm("EditCourse", "Course", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.CourseId)

    <div class="form-group">
        @Html.LabelFor(m => m.CourseNumber, new { @class = "control-label" })
        @Html.ValidationMessageFor(m => m.CourseNumber)
        @Html.EditorFor(m => m.CourseNumber, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CourseName, new { @class = "control-label" })
        @Html.ValidationMessageFor(m => m.CourseName)
        @Html.EditorFor(m => m.CourseName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SemesterId, new { @class = "control-label" })
        @Html.ValidationMessageFor(m => m.SemesterId)
        @Html.DropDownListFor(m => m.SemesterId, (Model.Semesters as SelectList), new { @class = "form-control", data_placeholder = "Agent(s)." })
    </div>

    <button type="submit" class="btn btn-course">Save changes</button>
}