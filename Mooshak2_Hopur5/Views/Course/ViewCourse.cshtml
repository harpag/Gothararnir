@model  Mooshak2_Hopur5.Models.ViewModels.AssignmentViewModel
@{
    ViewBag.Title = "Course";

}
<div class="row">
    <div class="col-md-5">
        <table class="table assignmentTable">
            <caption><span class="glyphicon glyphicon-th-list"></span>Open assignments</caption>
            @foreach (var assignment in Model.OpenAssignmentList)
            {
                string assignmentName = assignment.AssignmentName + "  -  " + assignment.DueDate;
                <tr>
                    <td>@Html.ActionLink(assignmentName, "ViewAssignment", "Assignment", new { id = assignment.AssignmentId }, null)</td>
                    <td>@assignment.DueDate</td>
                </tr>
            }
        </table>
    </div>

<h2>Open assignments</h2>
<ul class="list-group">
    @foreach (var assignment in Model.OpenAssignmentList)
    {
        string assignmentName = assignment.AssignmentName + "  -  " + assignment.DueDate;
        <Model.CourseIdli class="list-group-item">@Html.ActionLink(assignmentName, "ViewAssignment", "Assignment", new { id = assignment.AssignmentId}, null)</Model.CourseIdli>
    }
</ul>

<h2>Closed assignments</h2>
<ul class="list-group">
    @foreach (var assignment in Model.ClosedAssignmentList)
    {
        string assignmentName = assignment.AssignmentName + "  -  " + assignment.DueDate;
        <li class="list-group-item">@Html.ActionLink(assignmentName, "ViewAssignment", "Assignment", new { id = assignment.AssignmentId }, null)</li>
    }
</ul>

