@model  Mooshak2_Hopur5.Models.ViewModels.CourseViewModel
@{
    Layout = null;
}
<div class="dropdown-content">
    @foreach (var course in Model.CourseList)
    {
        string courseName = course.CourseNumber + "-" + course.CourseName;
        @Html.ActionLink(courseName, "ViewCourse", "Course", new { id = course.CourseId }, null)
    }
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Add new course", "CreateCourse", "Course")
        @Html.ActionLink("Add users to course", "AddUsersToCourse", "Course")
        @Html.ActionLink(" View all courses", "GetAllCourses", "Course")
    }
</div>
