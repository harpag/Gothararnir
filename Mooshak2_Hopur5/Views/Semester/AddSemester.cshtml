@model  Mooshak2_Hopur5.Models.ViewModels.SemesterViewModel

@{
    ViewBag.Title = "Add Semester";
}

<div class="well m-60">
    <h2>Add Semester</h2>

    @using (Html.BeginForm("AddSemester", "Semester", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        <div class="col-md-6 form-group">
            @Html.LabelFor(m => m.SemesterName, new { @class = "control-label" })
            @Html.ValidationMessageFor(m => m.SemesterName, null, new { @class = "text-danger" })
            @Html.EditorFor(m => m.SemesterName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-6 pull-right form-group">
            @Html.LabelFor(m => m.SemesterNumber, new { @class = "control-label" })
            @Html.ValidationMessageFor(m => m.SemesterNumber, null, new { @class = "text-danger" })
            @Html.EditorFor(m => m.SemesterNumber, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(m => m.DateFrom, new { @class = "control-label" })
            @Html.ValidationMessageFor(m => m.DateFrom, null, new { @class = "text-danger" })
            @Html.EditorFor(m => m.DateFrom, new { htmlAttributes = new { @class = "form-control dateTimePicker" } })
        </div>
        <div class="col-md-6 pull-right form-group">
            @Html.LabelFor(m => m.DateTo, new { @class = "control-label" })
            @Html.ValidationMessageFor(m => m.DateTo, null, new { @class = "text-danger" })
            @Html.EditorFor(m => m.DateTo, new { htmlAttributes = new { @class = "form-control dateTimePicker" } })
        </div>
        <div>
            <button type="submit" class="btn btn-assignment">Submit</button>
        </div>
    }
</div>
