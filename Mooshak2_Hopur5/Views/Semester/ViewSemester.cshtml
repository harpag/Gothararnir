@model  Mooshak2_Hopur5.Models.ViewModels.SemesterViewModel

@{
    ViewBag.Title = "Edit Semester";
}

<h2>Edit Semester</h2>


@using (Html.BeginForm("EditSemester", "Semester", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.SemesterId)

    <div class="form-group">
        @Html.LabelFor(m => m.SemesterName, new { @class = "control-label" })
        @Html.ValidationMessageFor(m => m.SemesterName)
        @Html.EditorFor(m => m.SemesterName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SemesterNumber, new { @class = "control-label" })
        @Html.ValidationMessageFor(m => m.SemesterNumber)
        @Html.EditorFor(m => m.SemesterNumber, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateFrom, new { @class = "control-label" })
        @Html.ValidationMessageFor(m => m.DateFrom)
        @Html.EditorFor(m => m.DateFrom, new { htmlAttributes = new { @class = "form-control", id = "datepicker" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateTo, new { @class = "control-label" })
        @Html.ValidationMessageFor(m => m.DateTo)
        @Html.EditorFor(m => m.DateTo, new { htmlAttributes = new { @class = "form-control", id = "datepicker" } })
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Save changes</button>
        
    </div>
}

